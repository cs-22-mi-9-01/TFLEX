Bootstrap: docker
From: ubuntu:18.04

%files
    ./TFLEX/* /app/

%post
    # Set working dir
    cd /app/

    # Install python modules
    pip install -r requirements.txt

    # Test
    echo "PWD and contents:"
    pwd
    ls

%runscript
    echo "--- Start run ---"
    echo "executing $@"
    exec "$@"

%test
    echo "Test script"

%labels
    Author jwli21@student.aau.dk
    Version v0.0.2




